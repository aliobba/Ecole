<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#e8b201"
    android:id="@+id/ensContainer">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_gravity="center"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProf"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/aaa"
            app:civ_border_color="#000000"
            app:civ_border_width="2dp"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="112dp"
            android:layout_marginTop="27dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:id="@+id/RL">

            <TextView
                android:id="@+id/nomProf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="aaa"
                android:textSize="25dp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/prenomProf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/nomProf"
                android:layout_toEndOf="@+id/nomProf"
                android:paddingStart="10dp"
                android:text="bbbb"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/mailProf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/nomProf"
                android:layout_below="@+id/nomProf"
                android:text="scsdbhchbcb"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/telProf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/mailProf"
                android:layout_below="@+id/mailProf"
                android:layout_marginTop="0dp"
                android:text="20224"
                android:textSize="25dp" />

        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/RL"
            android:layout_alignBottom="@+id/RL"
            android:text="Supprimer"
            android:backgroundTint="@color/white"
                android:id="@+id/deleteEns"
            android:visibility="invisible"
             />
    </RelativeLayout>


</android.support.v7.widget.CardView>

