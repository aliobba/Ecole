<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/image_close_24"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:elevation="5dp"
        android:layout_alignParentRight="true"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#fff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp">

                <TextView
                    android:id="@+id/info"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Veuillez saisir votre mail pour continuer votre inscription"
                    android:layout_below="@id/close"
                    android:layout_marginLeft="20dp"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginTop="50dp"
                    />


                <EditText
                    android:id="@+id/mail"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_black"
                    android:drawableLeft="@drawable/ic_action_user"
                    android:layout_below="@id/info"
                    android:hint="Votre Mail"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"
                    />

                <Button
                    android:id="@+id/recherche"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mail"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_search_round"
                    android:text="Recherche"
                    android:textColor="#fff"
                    android:layout_marginLeft="60dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>